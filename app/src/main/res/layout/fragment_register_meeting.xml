<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondaryAccent"
    tools:context=".ui.meetings.RegisterMeetingFragment">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <EditText
            android:id="@+id/inputMeetingSubject"
            android:layout_width="match_parent"
            android:layout_weight="0,5"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border"
            android:hint="Assunto"
            android:inputType="text"
            android:padding="16dp"
            android:textColorHint="@color/colorSecondary" />

        <EditText
            android:id="@+id/inputMeetingMembers"
            android:layout_weight="0,5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border"
            android:hint="Participantes"
            android:inputType="text"
            android:padding="16dp"
            android:textColorHint="@color/colorSecondary" />

<!--        Colocar lista de pendencias -->
        <EditText
            android:id="@+id/inputMeetingPreviousDemands"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border"
            android:hint="Pendencias foram concluÃ­das?"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="5"
            android:gravity="center"
            android:padding="16dp"
            android:textColorHint="@color/colorSecondary"
            android:scrollbars="vertical"/>

        <EditText
            android:id="@+id/inputMeetingDescription"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border"
            android:hint="O que foi discutido?"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="10"
            android:gravity="center"
            android:padding="16dp"
            android:textColorHint="@color/colorSecondary"
            android:scrollbars="vertical"/>

<!--        colocar lista de pendencias-->
        <Button
            android:id="@+id/btnSaveMeeting"
            android:layout_weight="0,5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_bg"
            android:text="Salvar"
            android:textColor="@color/colorSecondaryAccent"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
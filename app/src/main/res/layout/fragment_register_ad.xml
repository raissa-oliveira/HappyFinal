<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondaryAccent"
    tools:context=".ui.ads.RegisterAdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputAdTitle"
            android:layout_width="match_parent"
            android:layout_weight="0,5"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border"
            android:hint="Título"
            android:inputType="text"
            android:padding="16dp"
            android:textColorHint="@color/colorSecondary" />

        <EditText
            android:id="@+id/inputAdPrice"
            android:layout_weight="0,5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border"
            android:hint="Preço"
            android:inputType="text"
            android:padding="16dp"
            android:textColorHint="@color/colorSecondary" />

        <EditText
            android:id="@+id/inputAdDescription"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border"
            android:hint="Descrição"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="10"
            android:gravity="center"
            android:padding="16dp"
            android:textColorHint="@color/colorSecondary"
            android:scrollbars="vertical"/>

        <Button
            android:id="@+id/btnRegisterAd"
            android:layout_weight="0,5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_bg"
            android:text="Adicionar"
            android:textColor="@color/colorSecondaryAccent"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>